# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

[*.cs]
# Default severity for analyzer diagnostics with category 'Style' (escalated to build warnings)
dotnet_analyzer_diagnostic.category-Style.severity = error
dotnet_analyzer_diagnostic.category-CodeQuality.severity = error

# enable IDE0161: Convert to file-scoped namespace
csharp_style_namespace_declarations = file_scoped

# Disabled
dotnet_diagnostic.IDE0055.severity = none # Just says 'Fix formatting' without further details - very annoying!
dotnet_diagnostic.IDE0065.severity = none # Using directives must be placed outside of a namespace declaration - conflicts with SA1200
dotnet_diagnostic.IDE1006.severity = none # Naming rule violation: These words must begin with upper case characters - conflicts with SA1313

# Decision needed: fix or disable
dotnet_diagnostic.IDE0008.severity = none # Use explicit type instead of 'var'
dotnet_diagnostic.IDE0022.severity = none # Use block body for method
dotnet_diagnostic.IDE0023.severity = none # Use block body for conversion operator
dotnet_diagnostic.IDE0026.severity = none # Use expression body for indexer
dotnet_diagnostic.IDE0032.severity = none # Use auto property
dotnet_diagnostic.IDE0047.severity = none # Parentheses can be removed
dotnet_diagnostic.IDE0058.severity = none # Expression value is never used
dotnet_diagnostic.IDE0071.severity = none # Interpolation can be simplified
dotnet_diagnostic.IDE0072.severity = none # Populate switch
dotnet_diagnostic.IDE0078.severity = none # Use pattern matching
dotnet_diagnostic.IDE0200.severity = none # Lambda expression can be removed
